{
  "name": "shared",
  "main": "pages/index",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint components helpers hooks pages styles types --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "sass-types": "./node_modules/.bin/tsm styles --nameFormat none --exportType default",
    "sass-types:watch": "./node_modules/.bin/tsm styles -w --nameFormat none --exportType default",
    "css-types": "./node_modules/.bin/tcm styles",
    "css-types:watch": "./node_modules/.bin/tcm styles -w"
  },
  "dependencies": {
    "next": "10.1.3"
  },
  "devDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:fix"
    ]
  }
}
